<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>net.sf.bioutils</groupId>
	<artifactId>bioutils-proteomics</artifactId>
	<version>0.0.2-SNAPSHOT</version>
	<name>BioUtils - Proteomics</name>
	<description>A Collection of classes related to biological and bioinformatical topics related to proteomics</description>
	<properties>
		<jdk.version>1.6</jdk.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>
	<scm>
		<connection>scm:git:ssh://akerner@bioutils-proteo.git.sourceforge.net/gitroot/bioutils-proteo/bioutils-proteo
		</connection>
		<developerConnection>scm:git:ssh://akerner@bioutils-proteo.git.sourceforge.net/gitroot/bioutils-proteo/bioutils-proteo
		</developerConnection>
	</scm>
	<distributionManagement>
		<repository>
			<id>strato</id>
			<url>http://pantsdown.info/nexus-webapp-1.9/content/repositories/releases</url>
		</repository>
		<snapshotRepository>
			<id>strato</id>
			<url>http://pantsdown.info/nexus-webapp-1.9/content/repositories/snapshots</url>
		</snapshotRepository>
	</distributionManagement>
	<developers>
		<developer>
			<id>kerner</id>
			<name>Alexander Kerner</name>
			<email>a.kerner@dkfz.de</email>
			<roles>
				<role>Project Manager</role>
				<role>Architect</role>
			</roles>
		</developer>
	</developers>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>${jdk.version}</source>
					<target>${jdk.version}</target>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.8.2</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>net.sf.kerner-utils</groupId>
			<artifactId>kerner-utils</artifactId>
			<version>0.1.1</version>
		</dependency>
		<dependency>
			<groupId>net.sf.jtables</groupId>
			<artifactId>jtables</artifactId>
			<version>0.2.0</version>
		</dependency>
	</dependencies>
</project>